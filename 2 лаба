#include <iostream>

using namespace std;
int main() {
	setlocale(LC_CTYPE, "Russian");
	for (int i = 0; i < 20; i++) {
		for (int c = 0; c < i+1; c++) {
			cout << "x";
		}
		cout << endl;
	}
	return 0;
}


6.


#include <iostream> 
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	unsigned int numb; 
	unsigned long fact = 1;
	
	
cout << "Введите число или 0,чтобы закончить: ";
		cin >> numb;
		while (numb!=0){
		for (int i=1; i<=numb; i++) 
			fact *= i;
		cout << "Факториал числа: " << fact << endl;
		fact = 1;
		cout << "Введите число или 0,чтобы закончить: ";
		cin >> numb;
	}
		cout << "Прекращено" << endl;
	return 0;
}



7.




#include <iostream> 
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	float vklad, procent;
	int years;
	cout << "Начальный вклад: "; 
	cin >> vklad;
	cout << "Сколько лет: ";
	cin >> years;
	cout << "Процентаная ставка: "; 
	cin >> procent;
	procent = procent / 100;
	
	for (int i = 0; i < years; i++) {
	vklad = vklad + vklad * procent; 
}
	cout << "В конце следующего года вы получите $ = " << vklad;
	return 0;
}


8.



#include <iostream> 
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int f, sh, p, f2, sh2, p2; char t, otv;

	do {
		cout << "введите первую сумму в старых фунтов(3.4.5 пример): ";
		cin >> f >> t >> sh >> t >> p;
		while (sh >= 20 || p >= 12) {
			cout << "ошибка. шиллинги не больше 20. пенсы не больше 12. повторите попытку: ";
			cin >> f >> t >> sh >> t >> p;
		}
		cout << "введите вторую сумму в старых фунтов(3.4.5 пример): ";
		cin >> f2 >> t >> sh2 >> t >> p2;
		while (sh2 >= 20 || p2 >= 12) {
			cout << "ошибка. шиллинги не больше 20. пенсы не больше 12. повторите попытку: ";
			cin >> f2 >> t >> sh2 >> t >> p2;
		}
		f = f + f2;
		if (p + p2 >= 12) {
			sh++;
			p = p + p2 - 12;
		}
		else p += p2;
		if (sh + sh2 >= 20) {
			f++;
			sh = sh + sh2 - 20;
		}
		else sh += sh2;
		cout << "Сумма равна= " << f << t << sh << t << p << "\nПродолжить? y/n (y-да, n-нет)";
		cin >> otv;
	} while (otv == 'y');
	return 0;
}



9.


#include <iostream> 
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int mest=0, gost=0, a=0;
	cout << "Введите количество гостей: ";
	cin >> gost;
	cout << "Введите количество мест: ";
	cin >> mest;
	a = gost;
	gost--;
	for (int i = 1; i < mest; i++) {
		a *= gost;
		gost--;
	}
	cout << "ответ: " << a << endl;
	return 0;
}





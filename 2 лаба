5.


#include <iostream>

using namespace std;
int main() {
	setlocale(LC_CTYPE, "Russian");
	for (int i = 0; i < 20; i++) {
		for (int c = 0; c < i+1; c++) {
			cout << "x";
		}
		cout << endl;
	}
	return 0;
}


6.


#include <iostream> 
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	unsigned int numb; 
	unsigned long fact = 1;
	
	
cout << "Введите число или 0,чтобы закончить: ";
		cin >> numb;
		while (numb!=0){
		for (int i=1; i<=numb; i++) 
			fact *= i;
		cout << "Факториал числа: " << fact << endl;
		fact = 1;
		cout << "Введите число или 0,чтобы закончить: ";
		cin >> numb;
	}
		cout << "Прекращено" << endl;
	return 0;
}




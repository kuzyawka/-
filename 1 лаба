#include <iostream>
#include<iomanip>
#include <io.h>
#include <fcntl.h>
using namespace std;
int main() {
	setlocale(LC_CTYPE, "Russian");
	cout << "10 задание" << endl;
	int c, sh, g, p2,p;
	wchar_t F = L'\u00A3';

	cout << "Введите количество фунтов: ";
	cin >> c;
	cout << "Введите количество шиллингов: ";
	cin >>sh;
	cout << "Введите количество пенсов: ";
	cin >>p;
	p += sh * 12;
	p2 = (float)p / 2.4;
	if (p2 > 100) {
		c = p2 / 100;
		p2 = p2 / 100 * 100;
	}
	
	cout << c << "." << p2;
	_setmode(_fileno(stdout), _O_U16TEXT);
	wcout << F << endl;
	return 0;
}




11.


#include <iostream>
#include<iomanip>
using namespace std;
int main() {
	setlocale(LC_CTYPE, "Russian");
	cout << "11.По умолчанию форматирование вывода производится по правому краю поля. Можно изменить форматирование текста на левостороннее путем использования манипулятора setiosflags(ios::left) (не беспокойтесь о смысле новой формы записи, встретившейся в манипуляторе).\n" << endl;
	cout << setiosflags(ios::left) << setw(10) << "Фамилия" << setw(10) << "Имя" << setw(15) << "Адрес" << setw(10) << "Город\n" << endl;
	cout << setiosflags(ios::left) << setw(10) << "Петров" << setw(10) << "Василий" << setw(15) << "Кленовая,16" << setw(10) << "Санкт-Петербург" << endl;
	cout << setiosflags(ios::left) << setw(10) << "Иванов" << setw(10) << "Сергей" << setw(15) << "Осиновая,3" << setw(10) << "Находка" << endl;
	cout << setiosflags(ios::left) << setw(10) << "Сидоров" << setw(10) << "Иван" << setw(15) << "Березовая,21" << setw(10) << "Калининград" << endl;
	return 0;
}


12.



#include <iostream>
#include<iomanip>
#include <io.h>
#include <fcntl.h>
using namespace std;
int main() {
	setlocale(LC_CTYPE, "Russian");
	cout << "10 задание" << endl;
	int ce, sh, g, p2, p; float c;
	wchar_t F = L'\u00A3';

	cout << "Введите число десятичных фунтов: ";
	cin >> c;
	ce = (c * 100 * 2.4)/240;
	p = c * 100 * 2.4 - ce * 240;
	sh = p / 12;
	p2 = p - sh * 12;
	
	cout << ce << "." <<sh<<"."<<p2;
	_setmode(_fileno(stdout), _O_U16TEXT);
	wcout << F << endl;
	return 0;
}
